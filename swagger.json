{
  "openapi": "3.0.3",

  "info": {
    "version": "1.0.11",
    "title": "Swagger Slim Moms - OpenAPI 3.0",
    "descriptrion": "All about Slim Moms API"
  },

  "consume": ["application/json"],
  "produces": ["application/json"],

  "servers": [{ "url": "http://localhost:5001" }],

  "tags": [
    {
      "name": "Auth",
      "descriptrion": "Auth endpoints"
    },
    {
      "name": "Products",
      "descriptrion": "Products endpoints"
    }
  ],

  "paths": {
    "/api/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "User registration",

        "parameters": [],
        "security": [],

        "requestBody": {
          "description": "Registration object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegistrationRequest"
              }
            }
          }
        },

        "responses": {
          "201": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegistrationResponse"
                }
              }
            }
          },

          "404": {
            "description": "Bad request (invalid request bodu)"
          },

          "409": {
            "description": "Provided email already exists"
          }
        }
      }
    },

    "/api/dailyproducts": {
      "post": {
        "tags": ["Products"],
        "summary": "Daily products",

        "parameters": [],
        "security": [],

        "requestBody": {
          "descriptrion": "daily products object",
          "required": true,
          "content": {}
        },

        "responses": {
          "201": {
            "descriptrion": "test"
          },

          "404": {
            "descriptrion": "Bad request (invalid request bodu)"
          }
        }
      }
    }
  },

  "components": {
    "schemas": {
      "RegistrationRequest": {
        "type": "object",
        "required": [true],
        "properties": {
          "name": {
            "type": "string",
            "descriptrion": "User name",
            "example": "Bob"
          },
          "email": {
            "type": "string",
            "descriptrion": "User email",
            "example": "bob@gmail.com"
          },
          "password": {
            "type": "string",
            "descriptrion": "User password",
            "example": "1234567"
          }
        }
      },

      "RegistrationResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "descriptrion": "Status code",
            "data": {
              "user": "user name",
              "email": "user email"
            },
            "example": {
              "status": "Created",
              "code": 201,
              "data": {
                "user": {
                  "name": "asd",
                  "email": "asd1@gmail.com"
                }
              }
            }
          }
        }
      }
    }
  },

  "securitySchemas": {
    "Bearer": {
      "type": "http",
      "schema": "bearer",
      "bearerFormat": "JWT"
    }
  }
}
